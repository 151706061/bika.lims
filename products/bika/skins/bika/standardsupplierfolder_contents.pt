<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="bika"
      metal:use-macro="here/main_template/macros/master">
  <head>
      <metal:block fill-slot="top_slot">
        <tal:insert tal:replace="nothing"
              tal:define="dummy python:request.set('disable_border', 1)" />
      </metal:block>
  </head>
<body>

<div metal:fill-slot="main"
    tal:define="contentFilter python:{'sort_on': 'sortable_title'};
                view_title string:Standard Suppliers;
                view_portal_type string:StandardSupplier;
                contentsMethod here/getFolderContents">
<metal:contents use-macro="here/bika_folder_contents/macros/contents">

<metal:header_slot metal:fill-slot="listingheader">
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:size i18n:translate="listingheader_name"
        >Name</tal:size>&nbsp;</th>
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:modified i18n:translate="listingheader_emailaddress"
        >Email address</tal:modified>&nbsp;</th>
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:state i18n:translate="listingheader_phone"
        >Phone</tal:state>&nbsp;</th>
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:state i18n:translate="listingheader_fax"
        >Fax</tal:state>&nbsp;</th>
</metal:header_slot>

<metal:item_slot metal:fill-slot="item_display">
<td>
<a href="" tal:attributes="href item_url"
        tal:content="item/getName">Customer Name</a>
</td>
<td tal:content="item/getEmailAddress">
    customer@domain.com
</td>
<td tal:content="item/getPhone">
    0800 100 100
</td>
<td tal:content="item/getFax">
    0800 100 100
</td>
</metal:item_slot>

</metal:contents>
</div>

</body>
</html>
