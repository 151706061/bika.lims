<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="bika">

<head>

<metal:block fill-slot="top_slot">
<span
    tal:replace="nothing"
    tal:define="dummy python:request.set('enable_border', 1)"
    />
</metal:block>

</head>
             
             
<body>

<div metal:fill-slot="main"
    tal:define="
    dummy_a python:request.set('portal_type', 'StandardSample');
    dummy_b python:request.set('getStandardSupplierUID', here.UID());
    dummy_c python:request.set('sort_on', 'sortable_title');
    dummy_e python:here.toggle_state('suppliersample_review_state', 'all');
    suppliersample_state python:request.get('suppliersample_review_state');
    dummy_f python:here.REQUEST.set('review_state', suppliersample_state);
    states python:here.get_toggles('standardsample');
    header_state python:here.get_toggle_title(suppliersample_state, states)">

<div metal:use-macro="here/document_actions/macros/document_actions">
Document actions (print, sendto etc)
</div>

<h1>
<img src="standardsample.png" tal:attributes="src python:here.portal_types.getTypeInfo('StandardSample').getIcon()"/>
<span i18n:translate="heading_standard_samples">Standard Samples</span>
<tal:not_all tal:condition="python:suppliersample_state != 'all'">
-
<span i18n:translate="" tal:content="header_state">All</span>
</tal:not_all>

</h1>

<div id="content-standardsamples"
     tal:define="
        all python:suppliersample_state == 'all';
        results python:test(all, here.portal_catalog(
                    portal_type='StandardSample',
                    getStandardSupplierUID=here.UID(),
                    sort_on='sortable_title'),
                    container.queryCatalog());
        Batch python:modules['Products.CMFPlone'].Batch;
        b_start python:request.get('b_start',0);
        batch python:Batch(results, 15, int(b_start), orphan=1);
        buttons actions/folder_buttons;
        can_delete python: suppliersample_state == 'current'">

<form name="add_standardsample" action="." method="post">

<input
    class="standalone"
    type="submit"
    name="standardsample_add_form:method"
    value="Add New Standard Sample"
    tabindex=""
    i18n:attributes="value"
    tal:attributes="
        tabindex tabindex/next|nothing"/>
</form>

<br/>
<form name="filter_result" action="" method="post"
    tal:attributes="action template/getId">
<input type="hidden" name="portal_type" value="StandardSample"/>
<input type="hidden" name="getStandardSupplierUID" value=""
    tal:attributes="value here/UID"/>
<input type="hidden" name="sort_on" value="Title"/>
<div class="optionsToggle">
    <tal:x repeat="state states">
    <input class="noborder" type="radio" name="suppliersample_review_state" value="current"
        onclick="this.form.submit()"
        tal:define="state_id state/id"
        tal:attributes="value state_id;
            checked python:request.get('suppliersample_review_state', 'current') == state_id and 'checked' or None"/>
     <span tal:content="state/title"  i18n:translate="">Current</span>
    </tal:x>
</div>
</form>

<form name="standardsamples" action="." method="post">

<br/>

<table tal:condition="batch"
    class="listing"
    summary="standard samples listing"
    cellpadding="0" cellspacing="0">

<thead>
<tr>
<th class="nosort" tal:condition="can_delete"><input
    class="noborder"
    type="checkbox"
    src="select_all_icon.gif"
    name="selectButton"
    title="Select all items"
    onClick="toggleSelect(this);"
    tal:attributes="src string:$portal_url/select_all_icon.gif"
    alt="Select all items"
    i18n:attributes="title; alt"
    />
</th>
<th i18n:translate="label_ID">ID</th>
<th i18n:translate="label_title">Title</th>
<th i18n:translate="label_manufacturer">Manufacturer</th>
<th i18n:translate="label_cataloguenumber">Catalogue number</th>
<th i18n:translate="label_lotnumber">Lot number</th>
<th i18n:translate="label_standardstock">Stock</th>
<th i18n:translate="label_datesampled">Date sampled</th>
<th i18n:translate="label_datereceived">Date received</th>
<th i18n:translate="label_dateopened">Date opened</th>
<th i18n:translate="label_expirydate">Expiry date</th>
<th i18n:translate="label_status"
    tal:condition="all">Status</th>
</tr>
</thead>

<tbody tal:define="getRelativeContentURL nocall:utool/getRelativeContentURL">

<metal:block tal:repeat="item batch">
<tr tal:define="
        oddrow repeat/item/odd;
        obj item/getObject;
        standardstock obj/getStandardStock;
        manufacturer obj/getStandardManufacturer;
        item_title_or_id obj/title_or_id;
        item_state python:test(all, 
                        wtool.getInfoFor(obj, 'review_state', ''), 
                        suppliersample_state)"
    tal:attributes="
        class python:test(oddrow, 'even', 'odd')" >
<td tal:condition="can_delete">
<input type="checkbox" class="noborder" name="ids:list" id="#" value="#"
    tal:attributes="
        value obj/getId;
        id python: 'cb_'+obj.getId();
        checked request/ids_checked|nothing;
        tabindex tabindex/next|nothing;
        alt string:Select $item_title_or_id;
        title string:Select $item_title_or_id"/>
<input type="hidden" name="obj_paths:list" value="#"
    tal:attributes="value python:getRelativeContentURL(obj)" />
</td>
<td>
<a href="" 
    tal:attributes="href obj/absolute_url"
    tal:content="obj/getStandardID">SS-0001</a>
<img src="" 
    tal:condition="python: standardstock and standardstock.getHazardous()"
    tal:attributes="src string:${portal/absolute_url}/hazardous_small.png">
</td>
<td tal:content="obj/getStandardDescription"></td>
<td tal:content="python:manufacturer and manufacturer.Title()"></td>
<td tal:content="obj/getCatalogueNumber"></td>
<td tal:content="obj/getLotNumber"></td>
<td tal:content="python:standardstock and standardstock.Title()"></td>
<td> 
<span
    tal:condition="obj/getDateSampled"
    tal:content="python:plone_view.toLocalizedTime(obj.getDateSampled(), long_format=0)"
    >2005-01-01 10:10</span>
</td>
<td> 
<span
    tal:condition="obj/getDateReceived"
    tal:content="python:plone_view.toLocalizedTime(obj.getDateReceived(), long_format=0)"
    >2005-01-01 10:10</span>
</td>
<td> 
<span
    tal:condition="obj/getDateOpened"
    tal:content="python:plone_view.toLocalizedTime(obj.getDateOpened(), long_format=0)"
    >2005-01-01 10:10</span>
</td>
<td>
<span 
    tal:condition="obj/getExpiryDate"
    tal:content="python:plone_view.toLocalizedTime(obj.getExpiryDate(), long_format=0)"
    >2005-01-01 10:10</span>
</td>
<td tal:condition="all" 
    tal:content="python:item_state.replace('_', ' ')">
</td>
</tr>
</metal:block>

</tbody>

</table>


<!-- Navigation -->
<div metal:use-macro="here/batch_macros/macros/navigation" />

<tal:buttons tal:repeat="button actions/folder_buttons|nothing">
<input
    class="context"
    type="submit"
    name=""
    value=""
    tabindex=""
    tal:condition="python:can_delete and batch and button['id'] == 'delete'"
    i18n:attributes="value"
    tal:attributes="
        value button/name;
        name button/url;
        tabindex tabindex/next" />
</tal:buttons>

</form>

</div>
</div>

</body>
</html>
