<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="bika"
      metal:use-macro="here/main_template/macros/master">

<body>

<div metal:fill-slot="main"
    tal:define="contentFilter python:{'sort_on': 'sortable_title'};
                addableTypes python:[];
                view_title string:Invoice;
                view_portal_type string:Invoice;
                batch python:here.getFolderContents(contentFilter,batch=True, b_size=15,full_objects=True)">
<metal:contents use-macro="here/bika_folder_contents/macros/contents">

<metal:header_slot metal:fill-slot="listingheader">
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:size i18n:translate="listingheader_invoicenumber"
        >Invoice number</tal:size>&nbsp;</th>
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:size i18n:translate="listingheader_client"
        >Client</tal:size>&nbsp;</th>
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:modified i18n:translate="listingheader_date"
        >Date</tal:modified>&nbsp;</th>
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:modified i18n:translate="listingheader_subtotal"
        >Subtotal</tal:modified>&nbsp;</th>
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:modified i18n:translate="listingheader_vat"
        >VAT</tal:modified>&nbsp;</th>
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:modified i18n:translate="listingheader_total"
        >Total</tal:modified>&nbsp;</th>
</metal:header_slot>

<metal:item_slot metal:fill-slot="item_display">
<td>
    <a href="" tal:attributes="href item/absolute_url"
            tal:content="item/getInvoiceNumber">Invoice Nr 1</a>
</td>
<td tal:define="client item/getClient"
    tal:content="client/Title">Acme</td>
<td tal:content="python:plone_view.toLocalizedTime(item.getBatchEndDate())">
    1 January 2000
</td>
<td tal:content="item/getSubtotal">10.00</td>
<td tal:content="item/getVAT">2.00</td>
<td tal:content="item/getTotal">12.00</td>
</metal:item_slot>

</metal:contents>
</div>

</body>
</html>
