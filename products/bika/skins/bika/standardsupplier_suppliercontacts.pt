<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="bika"
      metal:use-macro="here/main_template/macros/master">

<body>

<div metal:fill-slot="main"
    tal:define="contentFilter python:{'sort_on': 'sortable_title', 'portal_type': 'SupplierContact'};
                addableTypes python:['SupplierContact'];
                view_title string:Contacts;
                view_portal_type string:SupplierContact;
                batch python:here.getFolderContents(contentFilter,batch=True, b_size=15,full_objects=True)">
<metal:contents use-macro="here/bika_folder_contents/macros/contents">

<metal:header_slot metal:fill-slot="listingheader">
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:size i18n:translate="listingheader_fullname"
        >Full name</tal:size>&nbsp;</th>
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:modified i18n:translate="listingheader_emailaddress"
        >Email address</tal:modified>&nbsp;</th>
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:state i18n:translate="listingheader_businessphone"
        >Business phone</tal:state>&nbsp;</th>
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:state i18n:translate="listingheader_mobilephone"
        >Mobile phone</tal:state>&nbsp;</th>
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:state i18n:translate="listingheader_fax"
        >Fax</tal:state>&nbsp;</th>
</metal:header_slot>

<metal:item_slot metal:fill-slot="item_display">
<td>
    <a href="#"
        tal:attributes="href item/absolute_url"
        tal:content="item/getFullname">
        Contact Name
    </a>
</td>
<td tal:content="item/getEmailAddress">
    contact@domain.com
</td>
<td tal:content="item/getBusinessPhone">
    0800 100 100
</td>
<td tal:content="item/getMobilePhone">
    0800 100 100
</td>
<td tal:content="item/getFax">
    0800 100 100
</td>
</metal:item_slot>

</metal:contents>
</div>

</body>
</html>
