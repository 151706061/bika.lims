<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="bika">

<head>
    <metal:block fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border', 1)" />
</head>
             
             
<body>

<div metal:fill-slot="main"
tal:define="
    dummy_a python:request.set('portal_type', 'StandardSample');
    dummy_b python:request.set('sort_on', 'sortable_title');
    dummy_d python:here.toggle_state('standardsample_review_state', 'all');
    standardsample_state python:request.get('standardsample_review_state',);
    dummy_e python:here.REQUEST.set('review_state', standardsample_state);
    states python:here.get_toggles('standardsample');
    header_state python:here.get_toggle_title(standardsample_state, states)">

<div metal:use-macro="here/document_actions/macros/document_actions">
Document actions (print, sendto etc)
</div>

<h1>
<img src="standardsample.png" tal:attributes="src python:here.portal_types.getTypeInfo('StandardSample').getIcon()"/>
<span i18n:translate="heading_standard_samples">Standard Samples</span>
<tal:not_all tal:condition="python:standardsample_state != 'all'">
-
<span i18n:translate="" tal:content="header_state">All</span>
</tal:not_all>
</h1>

<form action="" name="print_email" method="post"
      tal:attributes="action here_url">
  <input class="standalone" tabindex="0" type="submit"
         name="standardsamples_print:method" value="Print standards" />
  <input class="standalone" tabindex="0" type="submit"
         name="standardsamples_email:method" value="Email standards" />
</form>
<p/>

<form name="filter_result" action="" method="post"
    tal:attributes="action template/getId">
<input type="hidden" name="portal_type" value="StandardSample"/>
<input type="hidden" name="sort_on" value="Title"/>
<div class="optionsToggle">
    <tal:x repeat="state states">
    <input class="noborder" type="radio" name="standardsample_review_state" value="current"
        onclick="this.form.submit()"
        tal:define="state_id state/id"
        tal:attributes="value state_id;
            checked python:request.get('standardsample_review_state', 'all') == state_id and 'checked' or None"/>
    <span tal:content="state/title" i18n:translate="">All</span>
    </tal:x>
</div>
</form>

<div id="content-standardsamples"
     tal:define="
        all python:standardsample_state == 'all';
        results python:test(all, here.portal_catalog(
                    portal_type='StandardSample',
                    sort_on='sortable_title'),
                    container.queryCatalog());
        Batch python:modules['Products.CMFPlone'].Batch;
        b_start python:request.get('b_start',0);">
<form name="standardsamples" action="." method="post" tal:condition="results"
    tal:define="batch python:Batch(results, 15, int(b_start), orphan=1)">


<input type="hidden" name="form.submitted" value="1" />
<input type="hidden" name="came_from" value="standardsamples" />
<div tal:define="standardsample_actions python: portal.portal_actions.listFilteredActionsFor(batch[0].getObject());
                 standardsample_workflow_actions standardsample_actions/workflow;
                 standardsample_action python:standardsample_workflow_actions and not all">
<table
    class="listing"
    summary="standardsample listing"
    cellpadding="0" cellspacing="0">

<thead>
<tr>
<th class="nosort"
    tal:condition="standardsample_action">
<input
    class="noborder"
    type="checkbox"
    src="select_all_icon.gif"
    name="selectButton"
    title="Select all items"
    onClick="toggleSelect(this);"
    tal:attributes="src string:$portal_url/select_all_icon.gif"
    alt="Select all items"
    i18n:attributes="title; alt"
    />
</th>
<th i18n:translate="label_id">ID</th>
<th i18n:translate="label_title">Title</th>
<th i18n:translate="label_standardsupplier">Supplier</th>
<th i18n:translate="label_manufacturer">Manufacturer</th>
<th i18n:translate="label_cataloguenumber">Catalogue number</th>
<th i18n:translate="label_lotnumber">Lot number</th>
<th i18n:translate="label_stock">Stock </th>
<th i18n:translate="label_datesampled">Date sampled</th>
<th i18n:translate="label_datereceived">Date received</th>
<th i18n:translate="label_dateopened">Date opened</th>
<th i18n:translate="label_expirydate">Expiry date</th>
<th i18n:translate="label_status"
    tal:condition="python:standardsample_state == 'all'">Status</th>
</tr>
</thead>

<tbody tal:define="getRelativeContentURL nocall:utool/getRelativeContentURL">

<metal:block tal:repeat="result batch">
<tal:item define="item result/getObject;
                  standardstock item/getStandardStock;
                  standardmanufacturer item/getStandardManufacturer;
                  item_state python:test(standardsample_state == 'all', 
                        wtool.getInfoFor(item, 'review_state', ''), 
                        standardsample_state)">
<tr tal:define="
        oddrow repeat/result/odd;
        item_title_or_id item/title_or_id;"
    tal:attributes="
        class python:test(oddrow, 'even', 'odd')" >
<td tal:condition="standardsample_action">
<input type="checkbox" class="noborder" name="ids:list" id="#" value="#"
    tal:attributes="
        value item/UID;
        id python: 'cb_'+item.getId();
        checked request/ids_checked|nothing;
        tabindex tabindex/next|nothing;
        alt string:Select $item_title_or_id;
        title string:Select $item_title_or_id"/>
<input type="hidden" name="obj_paths:list" value="#"
    tal:attributes="value python:getRelativeContentURL(item)" />
</td>

<td style="white-space:nowrap">
<a href="" 
    tal:attributes="href item/absolute_url"
    tal:content="item/getStandardID">S-00001</a>
<img src="" 
    tal:condition="python:standardstock and standardstock.getHazardous()"
    tal:attributes="src string:${portal/absolute_url}/hazardous_small.png">
</td>
<td tal:content="item/getStandardDescription">Description</td>
<td tal:define="supplier python:item.aq_parent">
<a href="" 
    tal:define="supplier_base string:${supplier/absolute_url}/base_edit"
    tal:attributes="href supplier_base"
    tal:content="supplier/Title">Supplier</a>
</td>
<td>
<a href="" 
    tal:define="href python:standardmanufacturer and standardmanufacturer.absolute_url"
    tal:attributes="href href"
    tal:content="standardmanufacturer/Title|nothing">StandardManufacturer</a>
</td>
<td tal:content="item/getCatalogueNumber">Catalogue number</td>
<td tal:content="item/getLotNumber">Lot number</td>
<td>
<a href="" 
    tal:define="href python:standardstock and standardstock.absolute_url"
    tal:attributes="href href"
    tal:content="standardstock/Title|nothing">StandardStock</a>
</td>
<td tal:define="datesampled item/getDateSampled">
<span tal:condition="datesampled"
    tal:content="python:plone_view.toLocalizedTime(datesampled, long_format=0)"
    >2005-01-01 10:10</span>
</td>
<td tal:define="datereceived item/getDateReceived">
<span tal:condition="datereceived"
    tal:content="python:plone_view.toLocalizedTime(datereceived, long_format=0)"
    >2005-01-01 10:10</span>
</td>
<td tal:define="dateopened item/getDateOpened">
<span tal:condition="dateopened"
    tal:content="python:plone_view.toLocalizedTime(dateopened, long_format=0)"
    >2005-01-01 10:10</span>
</td>
<td tal:define="expirydate item/getExpiryDate">
<span tal:condition="expirydate"
    tal:content="python:plone_view.toLocalizedTime(expirydate, long_format=0)"
    >2005-01-01 10:10</span>
</td>
<td tal:condition="python:standardsample_state == 'all'" 
    tal:content="python:item_state.replace('_', ' ')">
</td>
</tr>
</tal:item>
</metal:block>

</tbody>

</table>


<!-- Navigation -->
<div metal:use-macro="here/batch_macros/macros/navigation" />

<tal:standardsample_actions
    condition="python:batch and not all">

<input type="hidden" id="workflow_action" name="workflow_action" value=""/>

<tal:buttons tal:repeat="transition standardsample_workflow_actions">

<input
    class="worksheet"
    type="submit"
    name="batch_status_modify:method"
    value=""
    tabindex=""
    i18n:attributes="value"
    tal:attributes="
        value transition/name;
        tabindex tabindex/next;
        onclick string:this.form.workflow_action.value = '${transition/id}'" />



</tal:buttons>
</tal:standardsample_actions>
</div>

</form>

</div>
</div>

</body>
</html>

