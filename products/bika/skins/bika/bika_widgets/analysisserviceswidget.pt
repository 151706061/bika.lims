<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>
    <metal:view_macro define-macro="view">
        <span id="analysisserviceswidget"
              tal:define="categories python:widget.getCategories(field, allservices=False);">
          <ul>
            <tal:repeat repeat="category python:categories.keys()">
              <li tal:content="category"/>
              <ul tal:define="services python:categories[category]">
                <li tal:repeat="service services"
                    tal:content="service/Title"/>
              </ul>
            </tal:repeat>
          </ul>
        </span>
    </metal:view_macro>

    <metal:edit_macro define-macro="edit">
      <metal:use use-macro="field_macro | context/widgets/field/macros/edit">
        <metal:body_macro fill-slot="widget_body">
          <span id="analysisserviceswidget"
                tal:define="categories python:widget.getCategories(field);">
            <tal:repeat repeat="category python:categories.keys()">
              <fieldset>
                <legend tal:content="category"
                        tal:attributes="
                          class python:widget.SelectedServices(field, category) and 'initial prefill' or 'initial';
                          name python:widget.getCategoryUID(category);
                          id field/getName;"/>
                <span tal:attributes="id python:widget.getCategoryUID(category)" class="analysisservices"/>
              </fieldset>
              <input type="hidden"
                     tal:attributes="value python:','.join([s.UID() for s in widget.SelectedServices(field, category)]); 
                                     id python:'selectedservices_%s'%(widget.getCategoryUID(category));
                                     name category"/>
              <input type="hidden"
                     tal:attributes="value python:','.join([s.UID for s in categories[category]]);
                                     name python:','.join([s.Title for s in categories[category]]);
                                     id python:'allservices_%s'%(widget.getCategoryUID(category));"/>
            </tal:repeat>
          </span>
        </metal:body_macro>
      </metal:use>
    </metal:edit_macro>
</body>
</html>
