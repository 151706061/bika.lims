<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="bika"
      metal:use-macro="here/main_template/macros/master">
  <head>
      <metal:block fill-slot="top_slot">
        <tal:insert tal:replace="nothing"
              tal:define="dummy python:request.set('disable_border', 1)" />
      </metal:block>
  </head>
<body>

<div metal:fill-slot="main"
    tal:define="contentFilter python:{'sort_on': 'sortable_title'};
                view_title string:Invoice Batches;
                view_portal_type string:InvoiceBatch;
                batch python:here.getFolderContents(contentFilter,batch=True, b_size=15,full_objects=True)">
<metal:contents use-macro="here/bika_folder_contents/macros/contents">

<metal:header_slot metal:fill-slot="listingheader">
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:size i18n:translate="listingheader_title"
        >Title</tal:size>&nbsp;</th>
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:modified i18n:translate="listingheader_batchstartdate"
        >Batch Start Date</tal:modified>&nbsp;</th>
    <th tal:attributes="class python:nosortclass"
        >&nbsp;<tal:modified i18n:translate="listingheader_batchenddate"
        >Batch End Date</tal:modified>&nbsp;</th>
</metal:header_slot>

<metal:item_slot metal:fill-slot="item_display">
<td>
    <a href="" tal:attributes="href item/absolute_url"
            tal:content="item/Title">Invoice Batch</a>
</td>
<td tal:content="python:plone_view.toLocalizedTime(item.getBatchStartDate())">
    1 January 2000
</td>
<td tal:content="python:plone_view.toLocalizedTime(item.getBatchEndDate())">
    1 January 2000
</td>
</metal:item_slot>

</metal:contents>
</div>

</body>
</html>
