<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/prefs_main_template/macros/master"
      i18n:domain="bika">

<head><title></title></head>

<body>
<div metal:fill-slot="prefs_configlet_main"
    tal:define="
        errors options/state/getErrors;
        selected_cats python:request.get('Categories', []);
        specs python:[p.getObject() for p in here.portal_catalog(portal_type='LabAnalysisSpec')];
        defined_st python:[p.getSampleTypeUID() for p in specs];
        sampletypes python:[p.getObject() for p in here.portal_catalog(portal_type='SampleType')];
        sort_on python:(('Title', 'nocase', 'asc'),);
        sampletypes python:sequence.sort(sampletypes, sort_on)">

<script type="text/javascript" src="utils.js"></script>

<tal:error repeat="error python:errors.keys()">
<tal:x define="message python:errors[error]">
<p class="portalMessage">
<span tal:content="error">field</span>:
<span tal:content="message">Error</span> </p>
</tal:x>
</tal:error>

<div metal:use-macro="here/document_actions/macros/document_actions">
    Document actions (print, sendto etc)
</div>
<h1>
    <img src="ar.png" tal:attributes="src python:here.portal_types.getTypeInfo('LabAnalysisSpec').getIcon()"/>
    <span tal:omit-tag="" i18n:translate="heading_specify_labanalysis_results"
        >Add Lab Analysis specifications</span>
</h1>

<form name="labanalysisspec_add_form" method="POST" action="template/getId"
    tal:attributes="action template/getId" autocomplete="off">

<input type="hidden" name="form.submitted" value="1" />
<input type="hidden" name="came_from" value="add" />

<br/>

<table>
<tr>
<td valign="top">
<table
    summary="Lab Analysis spec form"
    class="bikatable"
    cellpadding="0" cellspacing="0">
<thead>
<tr>
<th colspan="2" align="center"> 
<b i18n:translate="label_sampletypes">Sample types</b>
    &nbsp;<span class="fieldRequired"/>
</th>
</tr>
</thead>
<tbody>
<tr class="noborder" 
    tal:repeat="sampletype sampletypes">
<tal:sampletype
    tal:define="st_uid sampletype/UID">
<th tal:content="sampletype/Title">Alcohol</th>
<td>
<input type="checkbox" name="sampletypes:list" 
       class="noborder"
       value="" 
       tal:attributes="
            value python:st_uid;
            checked python:st_uid in request.get('sampletypes', '')">
</td>
<td class="noborder">
<span class="discreet" tal:condition="python:st_uid in defined_st"
    i18n:translate="label_specified">specified</span>
</td>
</tal:sampletype>
</tr>
</tbody>
</table>
</td>
<td valign="top">
<table
    summary="Lab Analysis spec form"
    class="bikatable"
    cellpadding="0" cellspacing="0">

<thead>
<tr>
<th>
<b i18n:translate="label_analyses">Analyses</b> 
    &nbsp;<span class="fieldRequired"/>
</th>
<th align="center" i18n:translate="label_min">Min</th>
<th align="center" i18n:translate="label_max">Max</th>
<th align="center" i18n:translate="label_perc_error">% error</th>
</tr>
</thead>
<tbody>
<tal:categories    
tal:define="
        display_cats python:here.portal_catalog(portal_type='AnalysisCategory', sort_on='sortable_title')">
<tr>
<td class="category" colspan="4">
<input
    class="noborder"
    type="checkbox"
    id="AllCats"
    title="Expand all categories"
    onClick="selectAllCats('AllCats', 'Cat')"
    tal:attributes="
        tabindex tabindex/next"/>

<b i18n:translate="Categories">Categories</b>

</td>
</tr>

<tal:category tal:repeat="category display_cats">
<tr>
<td class="category" colspan="4">
&nbsp
<input
    class="noborder"
    type="checkbox"
    name="Categories:list"
    title="Expand"
    tal:define="this_checked python:category.UID in selected_cats;
                i repeat/category/index;
                this_id string:Cat$i"
    tal:attributes="
        id this_id;
        checked this_checked;
        value category/UID;
        tabindex tabindex/next"/>
<b tal:content="category/Title"/>

</td>
</tr>
<tal:services 
    tal:condition="python:category.UID in selected_cats">
<tal:service 
    tal:define="
        services python:[s.getObject() for s in here.portal_catalog(portal_type='AnalysisService', getCategoryUID=category.UID)];
        sort_on python:(('Title', 'nocase', 'asc'),);
        services python:sequence.sort(services, sort_on)"

    tal:repeat="service services">


<tr tal:define="unit service/getUnit;
                service_uid service/UID">
<th> 
<a  onClick=""
    title="Click for details"
    tal:attributes="onClick string:javascript:showMethod('$portal_url', '${service/getId}')"
    tal:content="service/Title">
Alcohol
</a>
<em tal:condition="python:unit">(<span tal:replace="unit">mg/l</span>)</em>
</th>
<td>
<input size="6" name=""
    tal:define="input_name string:analysisspec.${service_uid}.min"
    tal:attributes="
        name string:${input_name}:ignore_empty:record;
        value python:request.get(input_name, '');
        tabindex tabindex/next"/>
</td>
<td>
<input size="6" name=""
    tal:define="input_name string:analysisspec.${service_uid}.max"
    tal:attributes="
        name string:${input_name}:ignore_empty:record;
        value python:request.get(input_name, '');
        tabindex tabindex/next"/>
</td>
<td>
<input size="6" name=""
    tal:define="input_name string:analysisspec.${service_uid}.error"
    tal:attributes="
        name string:${input_name}:ignore_empty:record;
        value python:request.get(input_name, '');
        tabindex tabindex/next"/>
</td>
</tr>
</tal:service>
</tal:services>
</tal:category>
</tal:categories>

</tbody>

</table>
</td>
</tr>
</table>

<br/>
<input class="context"
        type="submit"
        name="form.button.submit"
        value="Save"
        i18n:attributes="value"
        />
<input class="standalone"
        type="submit"
        name="form.button.cancel"
        value="Cancel"
        i18n:attributes="value"
        />
<input class="standalone"
        tabindex=""
        type="submit"
        name="form.button.category"
        value="expand"
        i18n:attributes="value"
        tal:attributes="tabindex tabindex/next"
        />
</form>

</div>

</body>

</html>


