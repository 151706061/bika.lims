<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="bika">

<head>
    <metal:block fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border', 1)" />
</head>
             
             
<body>

<div metal:fill-slot="main"
tal:define="
    dummy_a python:request.set('portal_type', 'Sample');
    dummy_b python:request.set('sort_on', 'getSampleID');
    dummy_c python:request.set('sort_order', 'reverse');
    dummy_d python:here.toggle_state('sample_review_state', 'all');
    sample_state python:request.get('sample_review_state');
    dummy_e python:here.REQUEST.set('review_state', sample_state);
    states python:here.get_toggles('sample');
    header_state python:here.get_toggle_title(sample_state, states)">

<div metal:use-macro="here/document_actions/macros/document_actions">
Document actions (print, sendto etc)
</div>

<h1>
<img src="sample.png" tal:attributes="src python:here.portal_types.getTypeInfo('Sample').getIcon()"/>
<span i18n:translate="heading_samples">Samples</span>
<tal:not_all tal:condition="python:sample_state != 'all'">
-
<span i18n:translate="" tal:content="header_state">All</span>
</tal:not_all>
</h1>


<form name="filter_result" action="" method="post"
    tal:attributes="action template/getId">
<input type="hidden" name="portal_type" value="Sample"/>
<input type="hidden" name="sort_on" value="getSampleID"/>
<input type="hidden" name="sort_order" value="reverse"/>
<div class="optionsToggle">
    <tal:x repeat="state states">
    <input class="noborder" type="radio" name="sample_review_state" value="due"
        onclick="this.form.submit()"
        tal:define="state_id state/id"
        tal:attributes="value state_id;
            checked python:request.get('sample_review_state') == state_id and 'checked' or None"/>
    <span tal:content="state/title" i18n:translate="">All</span>
    </tal:x>
</div>
</form>

<div id="content-samples"
     tal:define="
        all python:sample_state == 'all';
        results python:test(all, here.portal_catalog(
                    portal_type='Sample',
                    sort_on='getSampleID',
                    sort_order='reverse'), 
                    container.queryCatalog());
        Batch python:modules['Products.CMFPlone'].Batch;
        b_start python:request.get('b_start',0);">
<form name="samples" action="." method="post" tal:condition="results"
    tal:define="batch python:Batch(results, 15, int(b_start), orphan=1)">


<input type="hidden" name="form.submitted" value="1" />
<input type="hidden" name="came_from" value="samples" />
<div tal:define="sample_actions python: portal.portal_actions.listFilteredActionsFor(batch[0].getObject());
                 sample_workflow_actions sample_actions/workflow;
                 sample_action python:sample_workflow_actions and not all">
<table
    class="listing"
    summary="sample listing"
    cellpadding="0" cellspacing="0">

<thead>
<tr>
<th class="nosort"
    tal:condition="sample_action">
<input
    class="noborder"
    type="checkbox"
    src="select_all_icon.gif"
    name="selectButton"
    title="Select all items"
    onClick="toggleSelect(this);"
    tal:attributes="src string:$portal_url/select_all_icon.gif"
    alt="Select all items"
    i18n:attributes="title; alt"
    />
</th>
<th i18n:translate="label_sampleid">Sample ID</th>
<th i18n:translate="label_client">Client</th>
<th i18n:translate="label_requests">Requests</th>
<th i18n:translate="label_clientref">Client Ref</th>
<th i18n:translate="label_clientsid">Client Sid</th>
<th i18n:translate="label_sampletype">Sample Type</th>
<th i18n:translate="label_samplepoint">Sample Point</th>
<th i18n:translate="label_datereceived"
    tal:condition="python:sample_state != 'due'">Date received</th>
<th i18n:translate="label_status"
    tal:condition="python:sample_state == 'all'">Status</th>
</tr>
</thead>

<tbody tal:define="getRelativeContentURL nocall:utool/getRelativeContentURL">

<metal:block tal:repeat="result batch">
<tal:item define="item result/getObject;
                  sampletype item/getSampleType;
                  item_state python:test(sample_state == 'all', 
                        wtool.getInfoFor(item, 'review_state', ''), 
                        sample_state)">
<tr tal:define="
        oddrow repeat/result/odd;
        item_title_or_id item/title_or_id;"
    tal:attributes="
        class python:test(oddrow, 'even', 'odd')" >
<td tal:condition="sample_action">
<input type="checkbox" class="noborder" name="ids:list" id="#" value="#"
    tal:attributes="
        value item/UID;
        id python: 'cb_'+item.getId();
        checked request/ids_checked|nothing;
        tabindex tabindex/next|nothing;
        alt string:Select $item_title_or_id;
        title string:Select $item_title_or_id"/>
<input type="hidden" name="obj_paths:list" value="#"
    tal:attributes="value python:getRelativeContentURL(item)" />
</td>

<td style="white-space:nowrap">
<a href="" 
    tal:attributes="href item/absolute_url"
    tal:content="item/getSampleID">S-00001</a>
<img src="" 
    tal:condition="sampletype/getHazardous"
    tal:attributes="src string:${portal/absolute_url}/hazardous_small.png">
</td>
<td tal:define="client nocall:item/aq_parent"
    tal:content="client/Title">Client</td>
<td>
<tal:requests tal:define="ars python:item.getAnalysisRequests()"
    tal:repeat="ar ars">
<a href="" tal:content="ar/Title"
    tal:attributes="href ar/absolute_url">AR-00001</a>
</tal:requests>
</td>

<td tal:content="item/getClientReference">R001</td>
<td tal:content="item/getClientSampleID">S001</td>
<td tal:content="sampletype/Title|nothing">SampleType</td>
<td tal:define="samplepoint item/getSamplePoint"
    tal:content="samplepoint/Title|nothing">SamplePoint</td> 
<td tal:condition="python:sample_state != 'due'"> 
<span tal:condition="python:item_state != 'due'"
    tal:content="python:plone_view.toLocalizedTime(item.getDateReceived(), long_format=1)"
    >2005-01-01 10:10</span>
</td>
<td tal:condition="python:sample_state == 'all'" 
    tal:content="python:item_state.replace('_', ' ')">
</td>
</tr>
</tal:item>
</metal:block>

</tbody>

</table>


<!-- Navigation -->
<div metal:use-macro="here/batch_macros/macros/navigation" />

<tal:sample_actions
    condition="python:batch and not all">

<input type="hidden" id="workflow_action" name="workflow_action" value=""/>

<tal:buttons tal:repeat="transition sample_workflow_actions">

<input
    class="worksheet"
    type="submit"
    name="batch_status_modify:method"
    value=""
    tabindex=""
    i18n:attributes="value"
    tal:attributes="
        value transition/name;
        tabindex tabindex/next;
        onclick string:this.form.workflow_action.value = '${transition/id}'" />



</tal:buttons>
</tal:sample_actions>
</div>

</form>

</div>
</div>

</body>
</html>
