<tal:x repeat="state view/wflist_states">
  <input class="noborder" 
         type="radio" 
		 name="wflist_state" 
         onclick="this.form.submit()"
         tal:define="state_id state/id" 
		 tal:attributes="
		   value state_id;
           checked python:request.get('wflist_state', 'all') == state_id and 'checked' or None"/>
  <span tal:content="state/title" i18n:translate=""/>
</tal:x>
