<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xml:lang="en" lang="en"
      i18n:domain="plone"
      metal:use-macro="here/main_template/macros/master">

  <head>
    <metal:block fill-slot="top_slot">
      <style type="text/css">
        /*To hide the 'Add new' dropdown in the edit bar XXX cbb - kills the rounded border */
        #plone-contentmenu-factories {display:none;}
      </style>
    </metal:block>
  </head>

  <body>
    <metal:content-title fill-slot="content-title">
      <h1 class="documentFirstHeading" tal:content="view/title"/>
    </metal:content-title>

    <metal:content-description fill-slot="content-description">
        <div class="documentDescription" 
             tal:content="view/description" 
             tal:condition="view/description"/>
    </metal:content-description>

    <metal:content-core fill-slot="content-core">

      <tal:add_buttons repeat="add_item python:view.content_add_buttons.keys()">
          <form 
            name="folderContentsForm"
            method="post"
            action=""
            tal:attributes="action python:'%s/%s'%(context.absolute_url(), view.content_add_buttons[add_item])">
            <input 
              class="standalone add"
              type="submit"
              name=""
              i18n:attributes="value"
              tal:attributes="value string:Add ${add_item};
                              name string:add_${add_item}"/>
          </form>
      </tal:add_buttons>

      <p/>

      <form 
        name="folderContentsForm"
        method="post"
        action="folder_object"
        tal:attributes="action context/absolute_url"
        class="kssattr-serveraction-foldercontents_update_table">

        <tal:wflist condition="python: len(view.wflist_states)>1">
          <span i18n:translate="label_wfstates" tal:omit-tag="">States:<span tal:omit-tag="" tal:content="structure view/wflist"/></span>
        </tal:wflist>

        <div class="visualClear" id="clear-space-before-navigation"><!-- --></div>

        <div tal:replace="structure view/contents_table"></div>
        <input tal:replace="structure context/@@authenticator/authenticator" />

      </form>

    </metal:content-core>

  </body>
</html>




