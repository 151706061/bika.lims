<?xml version="1.0"?>
<object name="SamplePartition"
   meta_type="Factory-based Type Information with dynamic views"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title">SamplePartition</property>
 <property name="description">Sample Partition</property>
 <property name="content_icon">++resource++bika.lims.images/samplepartition.png</property>
 <property name="content_meta_type">SamplePartition</property>
 <property name="product">bika.lims</property>
 <property name="factory">addSamplePartition</property>
 <property name="add_view_expr"></property>
 <property name="link_target"></property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types"/>
 <property name="allow_discussion">False</property>

 <property name="default_view_fallback">False</property>
 <property name="default_view">base_view</property>
 <alias from="(Default)" to="base_view"/>

 <action title="View"
    action_id="view"
	category="object"
	condition_expr=""
    icon_expr=""
	link_target=""
	url_expr="string:${object_url}/base_view"
    visible="True">
  <permission value="View"/>
 </action>

 <action title="Edit"
    action_id="edit"
	category="object"
	condition_expr="python:here.guard_edit_sample()"
    icon_expr=""
	link_target=""
	url_expr="string:${object_url}/base_edit"
    visible="True">
  <permission value="BIKA: Edit Sample"/>
 </action>

 <action title="Log"
         action_id="log"
         category="object"
         condition_expr=""
         url_expr="string:${object_url}/log"
         visible="True">
  <permission value="View"/>
 </action>

<action title="Large Sticker"
	action_id="sticker_large"
	category="document_actions"
	condition_expr=""
	icon_expr="string:${object_url}/++resource++bika.lims.images/sticker_large.png"
	link_target=""
	url_expr="string:${object_url}/sticker?size=large"
	visible="True">
	<permission value="View"/>
</action>

<action title="Small Sticker"
	action_id="sticker_small"
	category="document_actions"
	condition_expr=""
	icon_expr="string:${object_url}/++resource++bika.lims.images/sticker_small.png"
	link_target=""
	url_expr="string:${object_url}/sticker?size=small"
	visible="True">
	<permission value="View"/>
</action>

</object>
