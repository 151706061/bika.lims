<?xml version="1.0"?>
<object name="Sample"
   meta_type="Factory-based Type Information with dynamic views"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title">Sample</property>
 <property name="description">Sample object</property>
 <property name="content_icon">++resource++bika.lims.images/sample.png</property>
 <property name="content_meta_type">Sample</property>
 <property name="product">bika.lims</property>
 <property name="factory">addSample</property>
 <property name="add_view_expr"></property>
 <property name="link_target"></property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types"/>
 <property name="allow_discussion">False</property>
 
 <property name="default_view_fallback">False</property>
 <property name="default_view">base_view</property>
 <alias from="(Default)" to="base_view"/>

 <action title="View"
    action_id="view"
	category="object"
	condition_expr=""
    icon_expr=""
	link_target=""
	url_expr="string:${object_url}/base_view"
    visible="True">
  <permission value="View"/>
 </action>

 <action title="Edit"
    action_id="edit"
	category="object"
	condition_expr="python:here.guard_cancellation()"
    icon_expr=""
	link_target=""
	url_expr="string:${object_url}/base_edit"
    visible="True">
  <permission value="BIKA: Edit Sample"/>
 </action>

 <action title="Large Sticker"
	action_id="sticker_lrg"
	category="document_actions"
	condition_expr=""
	icon_expr="string:++resource++bika.lims.images/sticker_large.png"
	link_target=""
	url_expr="string:${object_url}/sticker_large"
	visible="True">
	<permission value="View"/>
 </action>

 <action title="Small Sticker"
	action_id="sticker_sml"
	category="document_actions"
	condition_expr=""
	icon_expr="string:++resource++bika.lims.images/sticker_small.png"
	link_target=""
	url_expr="string:${object_url}/sticker_small"
	visible="True">
	<permission value="View"/>
 </action>

</object>
