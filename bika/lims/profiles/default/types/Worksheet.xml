<?xml version="1.0"?>
<object name="Worksheet"
   meta_type="Factory-based Type Information with dynamic views"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title">Worksheet</property>
 <property name="description">Worksheet
  </property>
 <property name="content_icon">++resource++bika.lims.images/worksheet.png</property>
 <property name="content_meta_type">Worksheet</property>
 <property name="product">bika.lims</property>
 <property name="factory">addWorksheet</property>
 <property name="add_view_expr"></property>
 <property name="link_target"></property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">False</property>
 <property name="allowed_content_types">
  <element value="DuplicateAnalysis"/>
  <element value="RejectAnalysis"/>
 </property>
 <property name="allow_discussion">False</property>

 <property name="default_view_fallback">False</property>
 <property name="default_view">manage_results</property>
 <alias from="(Default)" to="(selected layout)"/>
 <alias from="view" to="base_view"/>
 <alias from="edit" to="base_view"/>

 <action title="View" action_id="base_view" category="object"
    condition_expr="" icon_expr="" link_target=""
    url_expr="string:${object_url}/manage_results" visible="False">
  <permission value="BIKA: Manage Results"/>
 </action>

 <action title="Edit" action_id="base_edit" category="object"
    condition_expr="" icon_expr="" link_target=""
    url_expr="string:${object_url}/manage_results" visible="False">
  <permission value="BIKA: Manage Results"/>
 </action>

 <action title="Manage Results" action_id="manage_results" category="object"
    condition_expr="" icon_expr="" link_target=""
    url_expr="string:${object_url}/manage_results" visible="True">
  <permission value="BIKA: Manage Results"/>
 </action>

  <action title="Add Analyses" action_id="add_analyses" category="object"
    condition_expr="" icon_expr="" link_target=""
    url_expr="string:${object_url}/add_analyses" visible="True">
  <permission value="BIKA: Add and remove Analyses"/>
 </action>

  <action title="Add Blank" action_id="add_blank" category="object"
    condition_expr="" icon_expr="" link_target=""
    url_expr="string:${object_url}/add_blank" visible="True">
  <permission value="BIKA: Add and remove Analyses"/>
 </action>

  <action title="Add Control" action_id="add_control" category="object"
    condition_expr="" icon_expr="" link_target=""
    url_expr="string:${object_url}/add_control" visible="True">
  <permission value="BIKA: Add and remove Analyses"/>
 </action>

 <action title="Add Duplicate" action_id="add_duplicate" category="object"
    condition_expr="" icon_expr="" link_target=""
    url_expr="string:${object_url}/add_duplicate" visible="True">
  <permission value="BIKA: Add and remove Analyses"/>
 </action>

 <action title="Log" action_id="log" category="object" condition_expr=""
    icon_expr="" link_target="" url_expr="string:${object_url}/log"
    visible="True">
  <permission value="BIKA: Manage Bika"/>
 </action>

</object>
