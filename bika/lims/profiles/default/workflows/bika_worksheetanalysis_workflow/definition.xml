<?xml version="1.0"?>
<dc-workflow workflow_id="bika_worksheetanalysis_workflow"
             title="Worksheet Analysis Workflow [bika]"
             state_variable="review_state"
             initial_state="assigned">
 <permission>Modify portal content</permission>
 <permission>Delete objects</permission>
 <permission>BIKA: Submit results</permission>
 <permission>BIKA: Manage AnalysisRequest</permission>
 <permission>BIKA: View Results</permission>
 <permission>BIKA: Edit analyses</permission>
 <permission>BIKA: Retract sample</permission>
 <state state_id="assigned" title="Assigned to Worksheet">
  <exit-transition transition_id="submit"/>
  <permission-map name="BIKA: Edit analyses"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Manage AnalysisRequest"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabTechnician</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Retract sample"
                  acquired="True">
   <permission-role>LabTechnician</permission-role>
   <permission-role>LabClerk</permission-role>
   <permission-role>Reviewer</permission-role>
   <permission-role>Verifier</permission-role>
  </permission-map>
  <permission-map name="BIKA: Submit results"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabTechnician</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabTechnician</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabTechnician</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabTechnician</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
 </state>
 <state state_id="not_requested" title="Not requested">
  <exit-transition transition_id="verify"/>
  <permission-map name="BIKA: Edit analyses"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Manage AnalysisRequest"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabTechnician</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Retract sample"
                  acquired="True">
  </permission-map>
  <permission-map name="BIKA: Submit results"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabTechnician</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabTechnician</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabTechnician</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabTechnician</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
 </state>
 <state state_id="to_be_verified" title="To be verified">
  <exit-transition transition_id="verify"/>
  <exit-transition transition_id="retract"/>
  <exit-transition transition_id="reject"/>
  <permission-map name="BIKA: Edit analyses"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="BIKA: Manage AnalysisRequest"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="BIKA: Retract sample"
                  acquired="True">
  </permission-map>
  <permission-map name="BIKA: Submit results"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="BIKA: Verify sample"
                  acquired="False">
   <permission-role>Verifier</permission-role>
  </permission-map>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabTechnician</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="verified" title="Verified">
  <exit-transition transition_id="retract"/>
  <permission-map name="BIKA: Edit analyses"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="BIKA: Manage AnalysisRequest"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="BIKA: Publish sample"
                  acquired="False">
   <permission-role>Publisher</permission-role>
  </permission-map>
  <permission-map name="BIKA: Retract sample"
                  acquired="True">
  </permission-map>
  <permission-map name="BIKA: Submit results"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabTechnician</permission-role>
   <permission-role>LabClerk</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="rejected" title="Rejected">
  <permission-map name="BIKA: Edit analyses"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="BIKA: Manage AnalysisRequest"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="BIKA: Retract sample"
                  acquired="True">
  </permission-map>
  <permission-map name="BIKA: Submit results"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabTechnician</permission-role>
   <permission-role>LabClerk</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <transition transition_id="import" title="Import"
             new_state="not_requested" trigger="USER"
             before_script="" after_script="default">
  
  <guard>
   <guard-permission>BIKA: Import sample</guard-permission>
  </guard>
 </transition>
 <transition transition_id="retract" title="Retract"
             new_state="assigned" trigger="USER"
             before_script="" after_script="default">
  <action url="" category="workflow">Retract</action>
  <guard>
   <guard-permission>BIKA: Retract sample</guard-permission>
   <guard-expression>python:here.guard_retract_sample()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="submit"
             title="Submit for verification"
             new_state="to_be_verified" trigger="USER"
             before_script="" after_script="default">
  <action url="" category="workflow">Submit for verification</action>
  <guard>
   <guard-permission>BIKA: Submit sample</guard-permission>
   <guard-expression>python:here.guard_submit_analysis()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="verify" title="Verify"
             new_state="verified" trigger="USER"
             before_script="" after_script="default">
  <action url="" category="workflow">Verify</action>
  <guard>
   <guard-permission>BIKA: Verify sample</guard-permission>
  </guard>
 </transition>
 <transition transition_id="reject" title="Reject"
             new_state="rejected" trigger="USER"
             before_script="" after_script="">
  <action url="" category="workflow">Reject</action>
  <guard>
   <guard-permission>BIKA: Verify sample</guard-permission>
  </guard>
 </transition>
 <worklist worklist_id="reviewer_queue" title="">
  <description>Lab manager tasks</description>
  <action url="%(portal_url)s/search?review_state=pending"
          category="global">To be verified (%(count)d)</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
  <match name="review_state" values="to_be_verified"/>
 </worklist>
 <variable variable_id="action" for_catalog="False"
           for_status="True" update_always="True">
  <description>The last transition</description>
  <default>
   
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False"
           for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>
   
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False"
           for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>
   
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False"
           for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>
   
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <script script_id="default" type="Script (Python)"
         filename="workflows/bika_worksheetanalysis_workflow/scripts/default.py"
         module="" function=""/>
</dc-workflow>
