<?xml version="1.0"?>
<dc-workflow workflow_id="bika_cancellation_workflow"
             title="Bika Cancelled Workflow (subtractive)"
             description="This workflow allows users to Cancel objects"
             state_variable="cancellation_state"
             initial_state="active"
             manager_bypass="False">

 <permission>BIKA: Edit analyses</permission>
 <permission>BIKA: Manage Analysis Requests</permission>
 <permission>BIKA: Manage Invoices</permission>
 <permission>BIKA: Manage Sample</permission>
 <permission>BIKA: Retract sample</permission>
 <permission>BIKA: Submit results</permission>
 <permission>BIKA: View Results</permission>
 <permission>Delete objects</permission>
 <permission>Modify portal content</permission>

 <state state_id="active" title="Active">
  <description>Item is active and visible</description>
  <exit-transition transition_id="cancel"/>
  <permission-map name="BIKA: Edit analyses" acquired="True">
  </permission-map>
  <permission-map name="BIKA: Manage Analysis Requests" acquired="True">
  </permission-map>
  <permission-map name="BIKA: Manage Invoices" acquired="True">
  </permission-map>
  <permission-map name="BIKA: Manage Sample" acquired="True">
  </permission-map>
  <permission-map name="BIKA: Retract sample" acquired="True">
  </permission-map>
  <permission-map name="BIKA: Submit results" acquired="True">
  </permission-map>
  <permission-map name="BIKA: View Results" acquired="True">
  </permission-map>
  <permission-map name="Delete objects" acquired="True">
  </permission-map>
  <permission-map name="Modify portal content" acquired="True">
  </permission-map>
 </state>

 <state state_id="cancelled" title="Cancelled">
  <description>Item has been cancelled</description>
  <exit-transition transition_id="reinstate"/>
  <permission-map name="BIKA: Edit analyses" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Manage Analysis Requests" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Manage Invoices" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Manage Sample" acquired="True">
  </permission-map>
  <permission-map name="BIKA: Retract sample" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Submit results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: View Results" acquired="True">
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
 </state>

 <transition transition_id="cancel" title="Cancel" new_state="cancelled" trigger="USER" before_script="" after_script="">
  <action url="workflow_action?workflow_action=cancel" category="" icon="">Cancel</action>
  <guard>
  </guard>
 </transition>

 <transition transition_id="reinstate" title="Reinstate" new_state="active" trigger="USER" before_script="" after_script="">
  <action url="workflow_action?workflow_action=reinstate" category="" icon="">Reinstate</action>
  <guard>
  </guard>
 </transition>

 <variable variable_id="action" for_catalog="False" for_status="True" update_always="True">
  <description>The last transition</description>
  <default>
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="actor" for_catalog="False" for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="comments" for_catalog="False" for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="review_history" for_catalog="False" for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="time" for_catalog="False" for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>

</dc-workflow>
