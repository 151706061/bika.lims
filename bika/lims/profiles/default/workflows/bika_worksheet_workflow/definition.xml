<?xml version="1.0"?>
<dc-workflow workflow_id="bika_worksheet_workflow"
             title="Worksheet Workflow [bika]"
             state_variable="review_state"
             initial_state="open">

 <permission>Edit Worksheet</permission>
 <permission>Add and remove Analyses</permission>
 <permission>Manage Results</permission>

 <state state_id="open" title="Worksheet open">
  <exit-transition transition_id="submit"/>
  <permission-map name="Edit Worksheet" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Add and remove Analyses" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Manage Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
 </state>

 <state state_id="attachment_due" title="Attachment Outstanding">
  <exit-transition transition_id="attach"/>
  <exit-transition transition_id="retract"/>
  <exit-transition transition_id="reject"/>
  <permission-map name="Edit Worksheet" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Add and remove Analyses" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Manage Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
 </state>

 <state state_id="to_be_verified" title="To be verified">
  <exit-transition transition_id="verify"/>
  <exit-transition transition_id="retract"/>
  <exit-transition transition_id="reject"/>
  <permission-map name="Edit Worksheet" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
  </permission-map>
  <permission-map name="Add and remove Analyses" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
  </permission-map>
  <permission-map name="Manage Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
  </permission-map>
 </state>

 <state state_id="verified" title="Verified">
  <permission-map name="Edit Worksheet" acquired="False">
  </permission-map>
  <permission-map name="Add and remove Analyses" acquired="False">
  </permission-map>
  <permission-map name="Manage Results" acquired="False">
  </permission-map>
 </state>

 <state state_id="rejected" title="Rejected">
  <permission-map name="Edit Worksheet" acquired="False">
  </permission-map>
  <permission-map name="Add and remove Analyses" acquired="False">
  </permission-map>
  <permission-map name="Manage Results" acquired="False">
  </permission-map>
 </state>

 
 <transition transition_id="reject"
             title="Reject worksheet" new_state="rejected"
             trigger="USER" before_script=""
             after_script="">
  <action url="" category="workflow">Reject</action>
  <guard>
   <guard-permission>BIKA: Reject Worksheet</guard-permission>
  </guard>
 </transition>

 <transition transition_id="retract"
             title="Retract worksheet" new_state="open"
             trigger="USER" before_script=""
             after_script="">
  <action url="" category="workflow">Retract</action>
  <guard>
   <guard-expression>python:here.guard_retract_worksheet()</guard-expression>
  </guard>
 </transition>

 <transition transition_id="submit" title="Submit worksheet"
             new_state="attachment_due" trigger="USER"
             before_script="" after_script="">
  <action url="" category="workflow">Submit for verification</action>
  <guard>
   <guard-expression>python:here.guard_submit_worksheet()</guard-expression>
  </guard>
 </transition>

 <transition transition_id="attach" title="Submit worksheet"
             new_state="to_be_verified" trigger="USER"
             before_script="" after_script="">
  <action url="" category="workflow">Submit for verification</action>
  <guard>
   <guard-expression>python:here.guard_attach_worksheet()</guard-expression>
  </guard>
 </transition>

 <transition transition_id="verify" title="Verify worksheet"
             new_state="verified" trigger="USER"
             before_script="" after_script="">
  <action url="" category="workflow">Verify worksheet</action>
  <guard>
   <guard-expression>python:here.guard_verify_worksheet()</guard-expression>
  </guard>
 </transition>


 <variable variable_id="action" for_catalog="False"
           for_status="True" update_always="True">
  <description>The last transition</description>
  <default>
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 
 <variable variable_id="actor" for_catalog="False"
           for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 
 <variable variable_id="comments" for_catalog="False"
           for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 
 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 
 <variable variable_id="time" for_catalog="False"
           for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
 
</dc-workflow>
