  <exit-transition transition_id="attach"/>
  <exit-transition transition_id="retract"/>
  <permission-map name="BIKA: Edit analyses" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Manage Analysis Requests" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Retract sample" acquired="True">
  </permission-map>
  <permission-map name="BIKA: Submit results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
 </state>
 
 <state state_id="not_requested" title="Not requested">
  <exit-transition transition_id="verify"/>
  <permission-map name="BIKA: Edit analyses" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Manage Analysis Requests" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Retract sample" acquired="True">
  </permission-map>
  <permission-map name="BIKA: Submit results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
 </state>
 <state state_id="published" title="Published">
  <exit-transition transition_id="republish"/>
  <permission-map name="BIKA: Edit analyses" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="BIKA: Manage Analysis Requests" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="BIKA: Manage Invoices" acquired="True">
  </permission-map>
  <permission-map name="BIKA: Retract sample" acquired="True">
  </permission-map>
  <permission-map name="BIKA: Submit results" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="sample_due" title="Sample due">
  <exit-transition transition_id="receive"/>
  <exit-transition transition_id="import"/>
  <permission-map name="BIKA: Edit analyses" acquired="False">
  </permission-map>
  <permission-map name="BIKA: Manage Analysis Requests" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Retract sample" acquired="True">
  </permission-map>
  <permission-map name="BIKA: Submit results" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
 </state>
 <state state_id="sample_received" title="Sample received">
  <exit-transition transition_id="prepublish"/>
  <exit-transition transition_id="submit"/>
  <permission-map name="BIKA: Edit analyses" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Manage Analysis Requests" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: Retract sample" acquired="True">
  </permission-map>
  <permission-map name="BIKA: Submit results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
 </state>
 <state state_id="to_be_verified" title="To be verified">
  <exit-transition transition_id="verify"/>
  <exit-transition transition_id="prepublish"/>
  <exit-transition transition_id="retract"/>
  <permission-map name="BIKA: Edit analyses" acquired="False">
  </permission-map>
  <permission-map name="BIKA: Manage Analysis Requests" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>LabClerk</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>Verifier</permission-role>
  </permission-map>
  <permission-map name="BIKA: Retract sample" acquired="True">
  </permission-map>
  <permission-map name="BIKA: Submit results" acquired="False">
  </permission-map>
  <permission-map name="BIKA: Verify Results" acquired="False">
   <permission-role>Verifier</permission-role>
  </permission-map>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 <state state_id="verified" title="Verified">
  <exit-transition transition_id="publish"/>
  <exit-transition transition_id="retract"/>
  <permission-map name="BIKA: Edit analyses" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="BIKA: Manage Analysis Requests" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="BIKA: Publish sample" acquired="False">
   <permission-role>Publisher</permission-role>
  </permission-map>
  <permission-map name="BIKA: Retract sample" acquired="True">
  </permission-map>
  <permission-map name="BIKA: Submit results" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="BIKA: View Results" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>
 
 <transition transition_id="attach" title="Attach" new_state="to_be_verified" trigger="USER" before_script="" after_script="">
  <action url="workflow_action?workflow_action=submit" category="workflow" icon="">Add attachmnt</action>
  <guard>
   <guard-permission>BIKA: Submit sample</guard-permission>
   <guard-expression>python:here.guard_attach_analysis()</guard-expression>
  </guard>
 </transition>
 
 <transition transition_id="import" title="Import" new_state="not_requested" trigger="USER" before_script="" after_script="">
  <guard>
   <guard-permission>BIKA: Import sample</guard-permission>
  </guard>
 </transition>
 <transition transition_id="prepublish" title="Prepublish" new_state="" trigger="USER" before_script="" after_script="">
  <action url="workflow_action?workflow_action=prepublish" category="workflow" icon="">Prepublish</action>
  <guard>
   <guard-permission>BIKA: Publish sample</guard-permission>
   <guard-expression>python:here.guard_prepublish_ar()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="publish" title="Publish" new_state="published" trigger="USER" before_script="" after_script="">
  <action url="workflow_action?workflow_action=publish" category="workflow" icon="">Publish</action>
  <guard>
   <guard-permission>BIKA: Publish sample</guard-permission>
   <guard-expression>python:here.guard_publish_analysis()</guard-expression>
  </guard>
 </transition>
 <transition transition_id="receive" title="Receive sample" new_state="sample_received" trigger="USER" before_script="" after_script="">
  <action url="workflow_action?workflow_action=receive" category="workflow" icon="">Receive sample</action>
  <guard>
   <guard-permission>BIKA: Receive sample</guard-permission>
  </guard>
 </transition>
 <transition transition_id="republish" title="Republish" new_state="" trigger="USER" before_script="" after_script="">
  <action url="workflow_action?workflow_action=republish" category="workflow" icon="">Republish</action>
  <guard>
   <guard-permission>BIKA: Publish sample</guard-permission>
  </guard>
 </transition>
 <transition transition_id="retract" title="Retract" new_state="sample_received" trigger="USER" before_script="" after_script="">
  <action url="workflow_action?workflow_action=retract" category="workflow" icon="">Retract</action>
  <guard>
   <guard-permission>BIKA: Retract sample</guard-permission>
   <guard-expression>python:here.guard_retract_sample()</guard-expression>
  </guard>
 </transition>
 
 <transition transition_id="submit" title="Submit for verification" new_state="attachment_due" trigger="USER" before_script="" after_script="">
  <action url="workflow_action?workflow_action=submit" category="workflow" icon="">Submit for verification</action>
  <guard>
   <guard-permission>BIKA: Submit sample</guard-permission>
   <guard-expression>python:here.guard_submit_analysis()</guard-expression>
  </guard>
 </transition>
 
 <transition transition_id="verify" title="Verify" new_state="verified" trigger="USER" before_script="" after_script="">
  <action url="workflow_action?workflow_action=verify" category="workflow" icon="">Verify</action>
  <guard>
   <guard-permission>BIKA: Verify Results</guard-permission>
   <guard-expression>python:here.guard_verify_analysis()</guard-expression>
  </guard>
 </transition>
 <worklist worklist_id="reviewer_queue" title="">
  <description>Lab manager tasks</description>
  <action url="%(portal_url)s/search?review_state=pending" category="global" icon="">To be verified (%(count)d)</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
  <match name="review_state" values="to_be_verified"/>
 </worklist>
 <variable variable_id="action" for_catalog="False" for_status="True" update_always="True">
  <description>The last transition</description>
  <default>

   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False" for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>

   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False" for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>

   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False" for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>

   <expression>state_change/getHistory</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False" for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>

   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
</dc-workflow>
