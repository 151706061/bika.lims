<?xml version="1.0"?>
<dc-workflow workflow_id="bika_referencesample_workflow"
             title="Reference Sample Workflow [bika]"
             state_variable="review_state"
             initial_state="current">
 <permission>Modify portal content</permission>
 <permission>Delete objects</permission>
 <permission>BIKA: Manage Reference</permission>


 <state state_id="current" title="Current">
  <exit-transition transition_id="expire"/>
  <permission-map name="BIKA: Manage Reference"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
 </state>

 <state state_id="expired" title="Expired">
  <exit-transition transition_id="dispose"/>
  <permission-map name="BIKA: Manage Reference"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>

 <state state_id="disposed" title="Disposed">
  <permission-map name="BIKA: Manage Reference"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>LabManager</permission-role>
   <permission-role>Analyst</permission-role>
   <permission-role>LabClerk</permission-role>
  </permission-map>
 </state>


 <transition transition_id="expire" title="Expire"
             new_state="expired" trigger="USER"
             before_script="" after_script="">
  <action url="workflow_action?workflow_action=expire" category="workflow">Expire Reference</action>
  <guard>
   <guard-permission>BIKA: Manage Reference</guard-permission>
  </guard>
 </transition>

 <transition transition_id="dispose" title="Dispose"
             new_state="disposed" trigger="USER"
             before_script="" after_script="">
  <action url="workflow_action?workflow_action=dispose" category="workflow">Dispose of Reference</action>
  <guard>
   <guard-permission>BIKA: Manage Reference</guard-permission>
  </guard>
 </transition>


 <variable variable_id="action" for_catalog="False"
           for_status="True" update_always="True">
  <description>The last transition</description>
  <default>
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="actor" for_catalog="False"
           for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="comments" for_catalog="False"
           for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="time" for_catalog="False"
           for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>

</dc-workflow>
