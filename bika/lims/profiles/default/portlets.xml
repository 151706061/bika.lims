<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plone">

    <assignment
        manager="plone.leftcolumn"
        category="context"
        key="/"
        type="portlets.Login"
        name="login"
        visible="True"
        />

    <assignment
        manager="plone.leftcolumn"
        category="context"
        key="/"
        type="portlets.Navigation"
        visible="True"
        name="navigation">
     <property name="topLevel">0</property>
     <property name="bottomLevel">0</property>
     <property name="currentFolderOnly">False</property>
     <property name="name">Navigation</property>
     <property name="includeTop">True</property>
     <property name="root">/</property>
    </assignment>

 <assignment name="Calendar" category="context" key="/"
    manager="plone.rightcolumn" type="portlets.Calendar" visible="True">
 </assignment>

 <assignment name="portlet_late_analyses-pt" category="context" key="/"
    manager="plone.rightcolumn" type="portlets.Classic" visible="True">
  <property name="macro">portlet</property>
  <property name="template">portlet_late_analyses</property>
 </assignment>

 <assignment name="portlet_to_be_verified-pt" category="context" key="/"
    manager="plone.rightcolumn" type="portlets.Classic" visible="True">
  <property name="macro">portlet</property>
  <property name="template">portlet_to_be_verified</property>
 </assignment>

</portlets>
