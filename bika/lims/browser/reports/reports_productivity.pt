    <tr><td>
    <span i18n:translate="">From</span>
    </td><td>
    <tal:date tal:define="
         input_id string:DateRequested_fromdate;
         input_name input_id">
        <input size="10" type='text' readonly="readonly"
                tal:attributes="
                    value python:'';
                    id input_id;
                    name input_name;"/>
    </tal:date>
    </td></tr>

    <tr><td>
    <span i18n:translate="">to</span>
    </td><td>
