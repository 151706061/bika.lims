<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:tal="http://xml.zope.org/namespaces/tal"
	xmlns:metal="http://xml.zope.org/namespaces/metal"
	xmlns:i18n="http://xml.zope.org/namespaces/i18n"
	metal:use-macro="here/main_template/macros/master" i18n:domain="bika">
<body class="template-treatmenthistory">

	<metal:content-core fill-slot="content-core">
    <form name="treatmenthistory" method="POST">
		<div id="folderlisting-main-table">
            <input tal:replace="structure context/@@authenticator/authenticator" />
            <input type="hidden" name="submitted" value="1"/>
			<div class="bika-listing-table-container">
				<table summary="Content listing" style="margin-bottom: 0px;"
					class="bika-listing-table">
					<thead>
						<tr>
							<th>&nbsp;</th>
							<th class="sortable column"
							    id="foldercontents-Treatment-column" width="20%">
                                <span i18n:translate="">Treatment</span>
                                <span class="fieldRequired">&nbsp;</span>
							</th>
							<th class="sortable column"
							    id="foldercontents-Drug-column" width="20%">
                                <span i18n:translate="">Drug</span>
                                <span class="fieldRequired">&nbsp;</span>
                            </th>
							<th class="sortable column" i18n:translate=""
							    id="foldercontents-Start-column" width="20%">
								Start</th>
							<th class="sortable column" i18n:translate=""
							    id="foldercontents-End-column" width="20%">
								End</th>
						</tr>
					</thead>

					<tbody class="item-listing-tbody"
						tal:define="global index python:-1">
                        <tr tal:repeat="row context/getTreatmentHistory">
                        	<td>
                            	<input class="noborder" type="checkbox" 
                            		name="SelectItem" id="SelectItem"
                            		tal:define="global index python:index+1;"
                            		tal:attributes="
                            			id python:'SelectItem-%s'%(index);
                            			name python:'SelectItem-%s'%(index);"/>
                            </td>
                            <td colspan="1" rowspan="1" class="state-active Treatment">
                                 <span tal:content="row/Treatment"/>
                            </td>
                            <td colspan="1" rowspan="1" class="state-active Drug">
                                 <span tal:content="row/Drug"/>
                            </td>
                            <td colspan="1" rowspan="1" class="state-active Start">
                                 <span tal:content="row/Start"/>
                            </td>
                            <td colspan="1" rowspan="1" class="state-active End">
                                 <span tal:content="row/End"/>
                            </td>
                        </tr>
                        <tr id="new">
                        	<td style="padding-bottom:15px;">&nbsp;</td>
                            <td colspan="1" rowspan="1" class="state-active Treatment">
                                 <input class="wide" id="Treatment" type="text" value="" autocomplete="off"/>
                            </td>
                            <td colspan="1" rowspan="1" class="state-active Drug">
                                 <input class="wide" id="Drug" type="text" value="" autocomplete="off"/>
                            </td>
                            <td colspan="1" rowspan="1" class="state-active Start">
                                 <input class="datepicker_nofuture" id="Start" type="text" value="" autocomplete="off"/>
                            </td>
                            <td colspan="1" rowspan="1" class="state-active End">
                                 <input class="datepicker" id="End" type="text" value="" autocomplete="off"/>
                            </td>
					</tbody>
					<tfoot>
						<tr>
							<td class="noborder workflow_actions" colspan="5"  style="padding:5px;">
								<input class="workflow_action_button action_button add_row allowMultiSubmit"
								       type="submit"
									   i18n:attributes="value"
									   value="Add" />								
								<tal:hastreatments tal:condition="python:hasattr(view, 'hasTreatmentHistory') and view.hasTreatmentHistory()">
									<input class="workflow_action_button action_button" type="submit"
										name="delete"
										i18n:attributes="value" value="Delete selected" />
									<input class="workflow_action_button action_button" type="submit"
										name="clear"
										i18n:attributes="value" value="Delete all" />
								</tal:hastreatments>
						   </td>
						</tr>
					</tfoot>
				</table>
			</div>
		</div>
		<input class="workflow_action_button action_button" type="submit"
			i18n:attributes="value" value="Save treatment history" />

		<tal:hasremarks tal:condition="python:hasattr(context, 'Remarks')">
			<tal:remarks
				define="
			field python:context.Schema()['Remarks'];
			errors python:{};">
				<p style="margin-top: 2em;" />
				<metal:widget
					use-macro="python:context.widget('Remarks', mode='edit')" />
			</tal:remarks>
		</tal:hasremarks>
    </form>
	</metal:content-core>

</body>
</html>
