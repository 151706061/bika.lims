<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xml:lang="en" lang="en"
      i18n:domain="plone"
      metal:use-macro="here/main_template/macros/master">
  <head>
    <metal:block fill-slot="top_slot">
      <style type="text/css">
      </style>
    </metal:block>
  </head>
  <body>

    <metal:content-title fill-slot="content-title">
      <h1 class="documentFirstHeading" tal:content="view/title"/>
    </metal:content-title>

    <metal:content-description fill-slot="content-description">
        <div class="documentDescription"
             tal:content="view/description"
             tal:condition="view/description"/>
    </metal:content-description>

    <metal:content-core fill-slot="content-core">

      <tal:add_actions repeat="add_item python:view.content_add_actions.keys()">
        <form method="post"
          tal:attributes="name string:folderContentsForm_add_${add_item};
                          id string:folderContentsForm_add_${add_item};
                          action python: view.content_add_actions[add_item];">
          <input
            class="standalone add"
            type="submit"
            name=""
            i18n:attributes="value"
            tal:attributes="value string:Add ${add_item}; name string:add_${add_item}"/>
          <input type="hidden" name="form.submitted" value="1" />
          <input tal:replace="structure context/@@authenticator/authenticator" />
        </form>
      </tal:add_actions>

      <br/>

      <form
        name="folderContentsForm"
        id="folderContentsForm"
        class="folderContentsForm"
        method="post"
        action=""
        tal:define="pagenumber string:1">

        <!-- These go here in the main bika_listing, so that multiple contents_table tables don't
            repeat them.  This means if you directly embed the contents_table into another template,
            you need to set them yourself.  -->
        <input type="hidden" name="sort_on" tal:attributes="value request/sort_on|string:getTitle"/>
        <input type="hidden" name="pagenumber" tal:attributes="value view/batch/pagenumber|pagenumber"/>
        <input type="hidden" name="show_all" tal:attributes="value view/show_all|nothing"/>
        <input type="hidden" name="orig_template" tal:attributes="value view/viewname|nothing"/>
        <input type="hidden" name="paths:list"
          tal:condition="view/selectall|nothing"
          tal:repeat="item view/batch/items_not_on_page"
          tal:attributes="value item/path"/>

        <div tal:replace="structure view/contents_table"></div>
      </form>
    </metal:content-core>

  </body>
</html>
