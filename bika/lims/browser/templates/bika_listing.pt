<html xmlns="http://www.w3.org/1999/xhtml"
	xml:lang="en" lang="en"
	xmlns:tal="http://xml.zope.org/namespaces/tal"
	xmlns:metal="http://xml.zope.org/namespaces/metal"
	xmlns:i18n="http://xml.zope.org/namespaces/i18n"
	metal:use-macro="here/main_template/macros/master"
	i18n:domain="bika">
<body>

<metal:content-title fill-slot="content-title">
	<h1 class="documentFirstHeading" tal:content="view/title"/>
</metal:content-title>

<metal:content-description fill-slot="content-description">
	<div class="documentDescription"
		tal:content="view/description"
		tal:condition="view/description"/>
</metal:content-description>

<metal:content-core fill-slot="content-core">

	<tal:add_actions repeat="add_item python:view.content_add_actions.keys()">
		<form method="post"
			tal:attributes="name string:folderContentsForm_add_${add_item};
				id string:folderContentsForm_add_${add_item};
				action python: view.content_add_actions[add_item];">
			<input
				class="standalone add"
				type="submit"
				name=""
				i18n:attributes="value"
				tal:attributes="value string:Add ${add_item}; name string:add_${add_item}"/>
			<input type="hidden" name="form.submitted" value="1" />
			<input tal:replace="structure context/@@authenticator/authenticator" />
		</form>
	</tal:add_actions>

	<br/>

	<form name="folderContentsForm"
		  method="post"
		  class="kssattr-serveraction-foldercontents_update_table">
	  <div tal:replace="structure view/contents_table"></div>
	  <input tal:replace="structure context/@@authenticator/authenticator" />
	</form>
</metal:content-core>

	</body>
</html>
