<html xmlns="http://www.w3.org/1999/xhtml"
	xml:lang="en" lang="en"
	xmlns:tal="http://xml.zope.org/namespaces/tal"
	xmlns:metal="http://xml.zope.org/namespaces/metal"
	xmlns:i18n="http://xml.zope.org/namespaces/i18n"
	metal:use-macro="here/main_template/macros/master"
	i18n:domain="bika">
<body>

<metal:content-title fill-slot="content-title">
    <h1>
	<img tal:condition="view/icon | nothing"
         src="" tal:attributes="src view/icon"/>

		<span class="documentFirstHeading" tal:content="structure view/title"/>

		<tal:add_actions repeat="add_item python:view.content_add_actions.keys()">
			<a tal:attributes="
				href python:view.content_add_actions[add_item];
				class python:'content_add_link %s' % view.content_add_actions[add_item]">
				<img src="++resource++bika.lims.images/add.png"/>
				<span tal:replace="add_item"/>
			</a>
		</tal:add_actions>

		<!-- Worksheet Templates dropdown is hacked in over here -->
		<span class="content_add_link"
			tal:condition="python:context.portal_type == 'WorksheetFolder'">
				<select class='wstemplate'
					tal:define="wstlist view/getWorksheetTemplates">
					<option value='' i18n:translate="select_template">Select template</option>
					<tal:options repeat="option wstlist">
						<option
							tal:attributes="value python:option"
							tal:content="python:wstlist.getValue(option)"/>
					</tal:options>
				</select>
		</span>

    </h1>
</metal:content-title>

<metal:content-description fill-slot="content-description">
	<div class="documentDescription"
		tal:content="structure view/description"
		tal:condition="view/description"/>
</metal:content-description>

<metal:content-core fill-slot="content-core">
	<div id="folderlisting-main-table"
		tal:content="structure view/contents_table"/>
</metal:content-core>

</body>
</html>
