<html xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="bika"
    tal:define="portal_url nocall:context/portal_url;
                portal portal_url/getPortalObject;">
<head>
    <style type="text/css" media="all"
           tal:condition="python:exists('portal/ploneCustom.css')"
           tal:content="structure string:&lt;!-- @import url($portal_url/ploneCustom.css); --&gt;">
    </style>
    <style type="text/css" media="all"
           tal:condition="python:exists('portal/reports.css')"
           tal:content="structure string:&lt;!-- @import url($portal_url/reports.css); --&gt;">
    </style>
    <style type="text/css">

      td {padding-top:2px;}

      .ars_table td {
        padding: 0 50px 0 0;
      }

    </style>
</head>

<body>

<table class="headertable" style="width:100%;">
    <tr>
        <!-- logo etc -->
        <td class="left">
            <img tal:attributes="src string:${view/portal_url}/logo.png"/>
            <br/>
            <tal:address tal:content="view/lab_address"/>
            <br tal:condition="view/lab_address"/>
            <tal:labemail tal:condition="view/laboratory/getEmailAddress">
                <a tal:content="view/laboratory/getEmailAddress"
                   tal:attributes="href string:mailto:${view/laboratory/getEmailAddress}"/>
            </tal:labemail>
            <tal:laburl tal:condition="view/laboratory/getLabURL">
                <br/>
                <a tal:content="view/laboratory/getLabURL"
                   tal:attributes="href string:${view/laboratory/getLabURL}"/>
            </tal:laburl>
        </td>
        <td align="right">
          <!-- top right -->
          <table>
            <tr><td>
                <tal:x i18n:translate="">Batch ID</tal:x>:
            </td><td>
                <span class="documentFirstHeading">
                  <span tal:omit-tag="python:True" tal:content="context/getBatchID"/>
                </span>
            </td></tr>

            <tr><td>
                <tal:x i18n:translate="">Client</tal:x>:
            </td><td>
                <span tal:condition="nocall:view/client|nothing" omit-tag="python:True">
                  <span tal:content="view/client/Title"/>
                </span>
            </td></tr>

            <tr><td>
                <tal:x i18n:translate="">Phone</tal:x>:
            </td><td>
                <span tal:omit-tag="python:True" tal:content="view/client/getPhone"/>
            </td></tr>

          </table>

        </td>
    </tr>
</table>
<br/>

<!-- Patient -->
<table style="width:100%;border-top:1px solid #dfdfdf;"
       summary="Patient"
       i18n:attributes="summary"
       tal:define="html view/getPatientIdentifiersStrHtml;"
       tal:condition="html">
  <tbody>
    <tr>
      <td style="width:55%">
        <span i18n:translate="">Patient</span>: <span tal:content="view/patient/Title"/>
        (<span i18n:translate="">Patient ID</span>: <span tal:content="view/patient/getPatientID"/>)
        <span tal:condition="view/patient/PatientIdentifiers" tal:content="structure html"/> <!-- this is in view python -->
      </td>
      <td style="width:15%"><span i18n:translate="">Gender</span>: <span tal:content="view/patient/getGender"/></td>
      <td style="width:15%"><span i18n:translate="">Age</span>: <span tal:content="view/patient/getAgeSplittedStr"/></td>
      <td style="width:15%"><span i18n:translate="">Birth date</span>: <span tal:content="python:view.ulocalized_time(view.patient.getBirthDate())"/></td>
    </tr>
  </tbody>
</table>

<!-- Doctor -->
<table style="width:100%;border-top:1px solid #dfdfdf;"
       summary="Doctor"
       i18n:attributes="summary"
       tal:define="doctor nocall:view/doctor;"
       tal:condition="doctor">
  <tbody>
    <tr>
      <td style="width:40%">
        <span i18n:translate="">Doctor</span>: <span tal:content="doctor/getFullname"/>
        (<span i18n:translate="">Doctor ID</span>: <span tal:content="doctor/getDoctorID"/>)
      </td>
      <td style="width:30%"><span i18n:translate="">Phone</span>: <span tal:content="doctor/getBusinessPhone"/></td>
      <td style="width:30%"></td>
    </tr>
  </tbody>
</table>

<!-- Signs and Symptoms -->
<table style="width:100%;border-top:1px solid #dfdfdf;"
       summary="Symptoms"
       i18n:attributes="summary">
  <tbody>
    <tr>
      <td style="width:20%">
        <span i18n:translate="">Signs and Symptoms</span>:
      </td>
      <td style="width:80%">
        <span tal:content="structure view/getSymptomsStrHtml"/>
      </td>
    </tr>
  </tbody>
</table>

<!-- Provisional Diagnosis and additional notes -->
<table style="width:100%;border-top:1px solid #dfdfdf;"
       summary="Symptoms"
       i18n:attributes="summary">
  <tbody>
    <tr>
      <td style="width:20%;">
        <span i18n:translate="">Provisional diagnosis</span>:</td>
        <td><span tal:content="structure view/getProvisionalDiagnosisStrHtml"/>
      </td>
    </tr>
  </tbody>
</table>

<!-- Analysis Request results -->
<div tal:repeat="ar view/ars">

  <!-- AR details -->
  <hr/>
  <table style="width:100%;" summary="Summary">
    <tbody>
      <tal:x repeat="header view/ar_headers">
        <tal:x condition="repeat/header/even" tal:omit-tag="python:True" tal:content="structure string:<tr>"/>
          <td><span tal:content="header"/>: <span tal:content="python:ar[header]"/></td>
        <tal:x condition="repeat/header/odd" tal:omit-tag="python:True" tal:content="structure string:</tr>"/>
      </tal:x>
      <td>&nbsp;</td>
    </tbody>
  </table>

  <!-- Analyses and Results -->
  <table class="bika-report-table" style="width:100%;" summary="Results">
    <thead>
      <tr>
        <tal:x repeat="header view/analysis_headers">
          <th><span tal:content="header"/></th>
        </tal:x>
      </tr>
    </thead>
    <tbody>
      <tr tal:repeat="analysis ar/datalines">
        <tal:x repeat="header view/analysis_headers">
          <td tal:content="python:analysis[header]"/>
        </tal:x>
      </tr>
    </tbody>
  </table>
</div>


<div id="footerContent">
  <table>
  <tr><td>
      <tal:x i18n:translate="">Print date:</tal:x>
      <span tal:content="python:view.ulocalized_time(view.now)"/>
  </td><td align="right">
        <span>Page:</span>
        <pdf:pagenumber/>
  </td></tr>
  </table>
</div>



