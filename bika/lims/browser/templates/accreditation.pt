<html xmlns="http://www.w3.org/1999/xhtml"
	xml:lang="en" lang="en"
	xmlns:tal="http://xml.zope.org/namespaces/tal"
	xmlns:metal="http://xml.zope.org/namespaces/metal"
	xmlns:i18n="http://xml.zope.org/namespaces/i18n"
	metal:use-macro="here/main_template/macros/master"
	i18n:domain="bika">
<body>

<metal:content-title fill-slot="content-title">
	<h1>
		<img tal:condition="view/icon | nothing"
			 src="" tal:attributes="src view/icon"/>
		<span class="documentFirstHeading" i18n:translate="Accreditation"/>
	</h1>
</metal:content-title>

<metal:content-description fill-slot="content-description">
	<tal:x
		condition="view/accredited"
		content="structure view/accreditation_description"/>
</metal:content-description>

<metal:content-core fill-slot="content-core">

	<h4 condition="view/accredited"
		i18n:translate="label_services_accredited">
		The following analysis services are accredited:
	</h4>

    <ul condition="view/accredited">
    <tal:categories tal:define="
            categories python:[c for c in context.bika_setup_catalog(portal_type='AnalysisCategory', sort_on='sortable_title')];"
        tal:repeat="category categories">
    <tal:category tal:define="
            services python:context.bika_setup_catalog(portal_type='AnalysisService', sort_on='sortable_title', getCategoryUID=category.UID, getAccredited=True);">
	    <div tal:condition="services">
		    <li tal:content="category/Title"></li>
			<tal:services tal:repeat="service services">
					<div  tal:define="item_title_or_id service/title_or_id">
						<a   onClick="" title="Click for details"
						     tal:attributes="onClick string:javascript:showMethod('$portal_url', '${service/getId}')"
						     tal:content="service/Title"/>
				    </div>
		    </tal:services>
	    </div>
    </tal:category>
    </tal:categories>
    </ul>


</metal:content-core>

	</body>
</html>
