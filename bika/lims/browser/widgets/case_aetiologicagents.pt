<html xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="bika">
<body>

    <div id="folderlisting-main-table" class="template-caseaetiologicagents">
        <input tal:replace="structure context/@@authenticator/authenticator" />
        <input type="hidden" name="CAE_submitted" value="1"/>
        <div class="bika-listing-table-container">
            <table summary="Content listing" style="margin-bottom: 0px;"
                class="bika-listing-table">
                <thead>
                    <tr>
                		<th>&nbsp;</th>
                        <th class="column"
                            id="foldercontents-title-column">
                            <span i18n:translate="" class="fieldRequired">Aetiologic agent</span>
                        </th>
                        <th class="column"
                            id="foldercontents-description-column">
                            <span i18n:translate="">Description</span>
                            <span> </span>
                        </th>
                        <th class="column"
                            id="foldercontents-subtype-column">
                            <span i18n:translate="">Subtype</span>
                        </th>
                    </tr>
                </thead>

                <tbody class="item-listing-tbody"
                		tal:define="global index python:-1">
                    <tr tal:repeat="row context/getAetiologicAgents">
                    	<td>
                          	 <input class="noborder" type="checkbox"
                          		name="CAE_SelectItem" id="CAE_SelectItem"
                          		tal:define="global index python:index+1;"
                          		tal:attributes="
                          			id python:'CAE_SelectItem-%s'%(index);
                          			name python:'CAE_SelectItem-%s'%(index);"/>
                        </td>
                        <td colspan="1" rowspan="1" class="state-active Title">
                             <span tal:content="row/Title"/>
                        </td>
                        <td colspan="1" rowspan="1" class="state-active Description">
                             <span tal:content="row/Description"/>
                        </td>
                        <td colspan="1" rowspan="1" class="state-active Subtype">
                             <span tal:content="row/Subtype"/>
                        </td>
                    </tr>
                    <tr id="new">
                    	<td style="padding-bottom:15px;">&nbsp;</td>
                        <td colspan="1" rowspan="1" class="state-active Title">
                             <input class="wide" id="Title" type="text" value="" autocomplete="off"/>
                             <input type="hidden" name="AgentUID" id="AgentUID" value=""/>
                        </td>
                        <td colspan="1" rowspan="1" class="state-active Description">
                             <input class="wide" id="Description" type="text" value="" autocomplete="off"/>
                        </td>
                        <td colspan="1" rowspan="1" class="state-active Subtype">
                             <input class="wide" id="Subtype" type="text" value="" autocomplete="off"/>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
					<tr>
						<td class="noborder workflow_actions" colspan="5"  style="padding:5px;">
							<input class="action_button add_row allowMultiSubmit"
						       type="submit"
							   i18n:attributes="value"
							   value="Add" />
							<tal:hasaetiologicagents tal:condition="python:hasattr(view, 'hasAetiologicAgents') and view.hasAetiologicAgents()">
								<input class="action_button" type="submit"
									name="CAE_delete"
									i18n:attributes="value" value="Delete selected" />
								<input class="action_button" type="submit"
									name="CAE_clear"
									i18n:attributes="value" value="Delete all" />
							</tal:hasaetiologicagents>
					   </td>
					</tr>
				</tfoot>
            </table>
        </div>
    </div>
</body>
</html>
