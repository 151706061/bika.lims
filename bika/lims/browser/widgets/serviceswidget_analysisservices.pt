<!-- Inserted into each category; a list of Services, one per TR, with a select checkbox  -->
<tr tal:repeat="service python:view.Services(view.request['UID'], view.request['poc'])"
    tal:define="portal context/@@plone_portal_state/portal">
  <th>
    <span tal:content="service/Title"/>
    <em style="white-space:nowrap;" tal:condition="service/getUnit">(<span tal:replace="service/getUnit">mg/l</span>)</em>
    <img tal:condition="python:context.bika_settings.laboratory.getLaboratoryAccredited() and service.getAccredited"
         tal:attributes="src string:${portal/absolute_url}/images/accredited.png"/>
  </th>

  <td class="cb" 
      tal:define="
        input_id string:service_${service/UID};
        input_name string:service.${service/UID}:ignore_empty:record;">
    <input
     class="cb"
     type="checkbox"
     value="checked"
     tal:attributes="id input_id;
                     name input_name;
                     checked python:request.get(input_name, []) and 'checked' or None;"/>
  </td>

</tr>

