<html xmlns="http://www.w3.org/1999/xhtml"
	xml:lang="en" lang="en"
	xmlns:tal="http://xml.zope.org/namespaces/tal"
	xmlns:metal="http://xml.zope.org/namespaces/metal"
	xmlns:i18n="http://xml.zope.org/namespaces/i18n"
	metal:use-macro="here/main_template/macros/master"
	i18n:domain="bika">

<head>
    <metal:block fill-slot="top_slot" tal:define="dummy python:request.set('disable_border', 1)" />
	<script type="text/javascript" src="utils.js"></script>
</head>

<body>

<metal:content-title fill-slot="content-title">
	<h1>
	<img src="++resource++bika.lims.images/accredited_big.png"/>
	<span i18n:translate="">Accreditation</span>
	</h1>
</metal:content-title>

<metal:content-description fill-slot="content-description">
    <a href=""
        tal:attributes="href context/bika_setup/laboratory/AccreditationBodyURL"
        i18n:translate="">
	    <tal:block replace="context/bika_setup/laboratory/AccreditationBody"/>
    </a>
    <span i18n:translate="accreditation_body_description"/>
</metal:content-description>

<br>

<metal:content-core fill-slot="content-core">
    <ul>






    <tal:categories
     tal:define="
            categories python:[c for c in context.bika_setup_catalog(portal_type='AnalysisCategory')];
            sort_on python:(('sortable_title', 'nocase', 'asc'),);
            categories python:sequence.sort(categories, sort_on)"
        tal:repeat="category categories">
    <tal:category
        tal:define="
            services python:context.bika_setup_catalog(portal_type='AnalysisService', sort_on='sortable_title', getCategoryUID=category.UID, getAccredited=True);">
    <div tal:condition="services">
    <li tal:content="category/Title"></li>
    <tal:services tal:repeat="service services">
    <div  tal:define="item_title_or_id service/title_or_id">
    <a   onClick="" title="Click for details"
         tal:attributes="onClick string:javascript:showMethod('$portal_url', '${service/getId}')"
         tal:content="service/Title">
    Alcohol
    </a>
    </div>
    </tal:services>
    </div>
    </tal:category>
    </tal:categories>
    </ul>
</metal:content-core>

</body>
</html>
