<html xmlns="http://www.w3.org/1999/xhtml"
   xmlns:tal="http://xml.zope.org/namespaces/tal"
   xmlns:metal="http://xml.zope.org/namespaces/metal"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n"
   i18n:domain="plone">
 <head><title></title></head>
 <body>
  <metal:view_macro define-macro="view">
     <table class="listing nosort">

     </table>
  </metal:view_macro>

  <metal:edit_macro define-macro="edit">
    <metal:use use-macro="field_macro | context/widgets/field/macros/edit">
      <metal:body_macro fill-slot="widget_body"
        tal:define="interim_fields field/getInterimFields">

        <table class="listing">

          <thead>
            <tr>
              <th i18n:translate="label_field_name">Field Name</th>
              <th i18n:translate="label_type">Type</th>
              <th i18n:translate="label_default_value">Default Value</th>
            </tr>
          </thead>

          <tbody tal:repeat="interim_field interim_fields">
            <tr tal:attributes="id string:interim_field_${interim_field/name}">
              <td><input type="text" name="interim_field_name:list" tal:attributes="value interim_field/name"/></td>
              <td><input type="text" name="interim_field_type:list" tal:attributes="value interim_field/type"/></td>
              <td><input type="text" name="interim_field_default:list" tal:attributes="value interim_field/default"/></td>
            </tr>
            <tr id="interim_field_new">
              <td><input type="text" name="interim_field_name:list"/></td>
              <td><input type="text" name="interim_field_type:list"/></td>
              <td><input type="text" name="interim_field_default:list"/></td>
            </tr>
          </tbody>

        </table>

    </metal:body_macro>
   </metal:use>
  </metal:edit_macro>
</body>
</html>
