<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="bika">

<body>

<div metal:define-macro="portlet"
     tal:define="member python: context.portal_membership.getAuthenticatedMember()"
     tal:condition="python:member.has_role(('LabManager', 'Publisher'))">
<tal:verified
     tal:define="portal context/portal_url/getPortalObject;
                 plone_view context/@@plone;
                 DateTime python:modules['DateTime'].DateTime;
                 rs python:here.portal_catalog(
                    portal_type='AnalysisRequest',
                    review_state='verified');
                 results python:[p.getObject() for p in rs[:5]];"
     tal:condition="results">

    <dl class="portlet" id="portlet-workflow-verified">

        <dt class="portletHeader"
            i18n:translate="box_verified">Verified</dt>

        <tal:block repeat="o results">
        <dd tal:define="oddrow repeat/o/odd"
            style="padding-top:4px;padding-bottom:0px;"
            tal:attributes="class python:test(oddrow, 'portletItem odd','portletItem even')">

            <a href="#"
                class="marker"
                tal:attributes="href string:${o/absolute_url};
                                title o/Description">
                <img src="" height="16" width="16"
                        tal:attributes="src string:${here/portal_url}/${o/getIcon};
                                        title o/Type;" />
                <span tal:replace="o/Title|o/getId"/>
            </a>

            <div class="portletDetails"
                 style="text-align:right"
                 tal:define="moddate o/ModificationDate;"
                 tal:content="python:plone_view.toLocalizedTime(moddate)">July 7, 08:11
            </div>
        </dd>
        </tal:block>

        <dd class="portletFooter" tal:condition="python:len(rs) > 5">

            <a href=""
                class="portletMore"
                tal:attributes="href string:${context/portal_url}/analysisrequests?review_state=verified"
                >
                <span tal:content="python:str(len(rs)-5)"/>
                <span i18n:translate="box_morelink">More...</span>
            </a>

        </dd>

    </dl>
</tal:verified>
</div>

</body>

</html>
